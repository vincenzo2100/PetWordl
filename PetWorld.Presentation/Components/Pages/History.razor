@page "/history"
@using PetWorld.Domain.Entities
@inject IChatService ChatService

<PageTitle>Historia - PetWorld</PageTitle>

<div class="history-container">
    <h2>📜 Historia rozmów</h2>

    @if (isLoading)
    {
        <div class="loading">
            <span>⏳ Ładowanie historii...</span>
        </div>
    }
    else if (messages == null || !messages.Any())
    {
        <div class="empty-state">
            <p>Brak historii rozmów. Zacznij od zadania pytania! 💬</p>
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="history-table">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Pytanie</th>
                        <th>Odpowiedź</th>
                        <th>Iteracje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var message in messages)
                    {
                        <tr>
                            <td class="date-column">
                                @message.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </td>
                            <td class="question-column">
                                <div class="text-preview">@message.Question</div>
                            </td>
                            <td class="answer-column">
                                <div class="text-preview">@message.Answer</div>
                            </td>
                            <td class="iteration-column">
                                <span class="iteration-badge">@message.Iterations</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<ChatMessage>? messages;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            messages = await ChatService.GetHistoryAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading history: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
